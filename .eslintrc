{
    "rules": {
        "indent": 0,
        "no-console": 0,
        "quotes": [
            2,
            "single",
            {"allowTemplateLiterals": true}
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ],
    },
    "env": {
        "node": true,
        "es6": true,
    },
    "globals": {
        " (test runner) ": true,
        "describe": true,
        "it": true,
        "run": true,
    },
    "parserOptions": {
        "ecmaVersion": "6",
        "sourceType": "module",
    },
    "extends": "eslint:recommended"
}